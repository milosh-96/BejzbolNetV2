@using OrchardCore.ContentManagement.Display
@using OrchardCore.Flows.ViewModels
@inject OrchardCore.ContentManagement.Display.IContentItemDisplayManager ContentItemDisplayManager

<div class="bg-accent py-20 relative overflow-hidden" id="tour">
    <div class="absolute inset-0 opacity-[0.03]">
        <svg class="w-full h-full"
             xmlns="http://www.w3.org/2000/svg">
            <defs>
                <pattern id="stitching" x="0" y="0" width="60" height="30" patternUnits="userSpaceOnUse"
                         >
                    <path d="M 0,15 Q 15,5 30,15 T 60,15" fill="none" stroke="currentColor" stroke-width="2"
                          ></path>
                </pattern>
            </defs>
            <rect width="100%" height="100%" fill="url(#stitching)"></rect>
        </svg>
    </div>
    <div class="max-w-6xl mx-auto px-6 relative z-10">
        <div class="text-center mb-16">
            <h2 class="text-4xl font-bold text-text mb-4">@Model.ContentItem.DisplayText</h2>
            <p class="text-xl text-text/70 max-w-2xl mx-auto">
                @await DisplayAsync(Model.Content.HtmlBodyPart)
            </p>
        </div>
        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
            @foreach (ContentItem item in Model.Content.BagPart.ContentItems)
            {
                var shape = await ContentItemDisplayManager.BuildDisplayAsync(item, null, "Summary");
                @await DisplayAsync(shape)
                ;
            }
        </div>
        <div class="mt-12 text-center">
            <button class="bg-highlight hover:bg-highlight/90 text-text px-8 py-3 rounded-lg font-semibold transition-colors"
                    >
                Begin the Tour
            </button>
        </div>
    </div>
</div>