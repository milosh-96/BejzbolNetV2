<div class="bg-primary text-accent min-h-[600px] flex items-center relative overflow-hidden">
    <div class="absolute inset-0 opacity-5">
        <svg class="w-full h-full" xmlns="http://www.w3.org/2000/svg">
            <defs>
                <pattern id="hero-diamonds" x="0" y="0" width="80" height="80" patternUnits="userSpaceOnUse">
                    <rect x="20" y="20" width="40" height="40" fill="none" stroke="currentColor" stroke-width="1.5"
                          transform="rotate(45 40 40)"></rect>
                </pattern>
            </defs>
            <rect width="100%" height="100%" fill="url(#hero-diamonds)"></rect>
        </svg>
    </div>
    <div class="max-w-6xl mx-auto px-6 py-20 relative z-10">
        <div class="flex flex-col lg:flex-row items-center gap-12 lg:gap-16">
            <div class="flex-1 lg:max-w-xl">
                <h1 class="text-5xl md:text-6xl font-bold mb-6 leading-tight">@Model.ContentItem.Content.TitlePart.Title</h1>
                <p class="text-xl md:text-2xl mb-8 text-accent/90">
                    @await DisplayAsync(Model.Content.HtmlBodyPart)
                </p>
                <a href="@Model.ContentItem.Content.HeroWidget.CallToAction.Url" class="bg-secondary w-full justify-center hover:bg-secondary/90 text-accent px-8 py-4 rounded-lg text-lg font-semibold flex items-center gap-2 transition-colors">
                    @Model.ContentItem.Content.HeroWidget.CallToAction.Text <i data-lucide="chevron-right"></i>
                </a>
            </div>
            <div class="flex-1 w-full lg:max-w-md">
                <div class="relative">
                    <div class="absolute -inset-3 rounded-2xl border-2 border-highlight/20 -rotate-2"></div>
                    <div class="relative rounded-xl overflow-hidden shadow-2xl">
                        <img src="https://images.unsplash.com/photo-1508344928928-7165b67de128?w=800" alt="A beautifully lit baseball field at dusk" class="w-full h-72 md:h-80 lg:h-96 object-cover">
                        <div class="absolute inset-0 bg-gradient-to-t from-primary/60 via-transparent to-transparent"></div>
                        <div class="absolute bottom-0 left-0 right-0 p-5">
                            <p class="text-accent/90 text-sm font-medium">
                                The diamond awaits — your journey starts here
                            </p>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
