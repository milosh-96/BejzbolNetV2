<div class="w-full">
    <div class="bg-primary text-accent py-12">
        <div class="max-w-6xl mx-auto px-6">
            <nav class="mb-4 flex items-center gap-2 text-sm">
                <a href="/"
                   class="hover:opacity-80 transition-opacity">@T["Home"]</a><span class="opacity-50">/</span>
                @{
                    var containedPart = Model.ContentItem.Content.ContainedPart;
                    string? containedPartId = containedPart is not null ? (string)containedPart.ListContentItemId : null;
                }

                @if (containedPartId is not null)
                {
                    var parent = await Orchard.GetContentItemByIdAsync(containedPartId);
                    <a display-for="@parent" class="hover:opacity-80 transition-opacity">@parent.DisplayText</a>
                    <span class="opacity-50">/</span>
                }
                <span class="opacity-70">@Model.ContentItem.DisplayText</span>
            </nav>
            <div class="flex items-start justify-between gap-4">
                <div class="flex-grow">
                    <h1 class="text-3xl md:text-4xl font-bold mb-2">@Model.ContentItem.DisplayText</h1>
                    @if(Model.Subtitle is not null)
                    {
                        @Model.Subtitle
                    }
                </div>
                <div class="flex-shrink-0">
                    <button class="bg-secondary text-accent px-4 py-2 rounded-lg font-semibold hover:bg-secondary/90">
                        Take Action
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>